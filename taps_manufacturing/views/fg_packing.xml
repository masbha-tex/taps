<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_new_fg_packing" model="ir.ui.view">
            <field name="name">fg.packing.form.view</field>
            <field name="model">fg.packing</field>
    			<field name="arch" type="xml">
                    <form string="FG Packing New">
                        <group>
                            <field name="name"/>
                            <field name="carton_no"/>
                            <field name="total_weight"/>
                            <field name="qty"/>
                            <field name="buyer_name"/>
                        </group>
                        <group>
                            <notebook>
                                <page name="carton_line" string="Packing Line">
                                    <field name="carton_line">
                                        <tree string="Packing Line" editable="bottom">
                                            <field name="fg_carton" invisible="1"/>
                                            <field name="oa_id"/>
                                            <field name="product_id" force_save="1"/>
                                            <field name="product_template_id"/>
                                            <field name="action_date"/>
                                            <field name="shade"/>
                                            <field name="shade_ref" readonly="1" force_save="1"/>
                                            <field name="finish"/>
                                            <field name="slidercodesfg" required="True" optional="show" sum="Quantity" decoration-bf="True"/>
                                            <field name="top"/>
                                            <field name="bottom" force_save="1"/>
                                            <field name="pinbox"/>
                                            <field name="sizcommon"/>
                                            <field name="qty"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </form>
                </field>
		</record>

        <record id="view_new_fg_packing_tree" model="ir.ui.view">
            <field name="name">fg.new_packing.tree</field>
            <field name="model">fg.packing</field>
            <field name="arch" type="xml" >
                <tree string="FG Packing" create="true">
                     <!-- delete ="false" editable="top" class="custom_column" -->
                    <field name="name"/>
                    <field name="carton_no"/>
                    <field name="carton_line"/>
                    <field name="total_weight"/>
                    <field name="qty"/>
                    <field name="buyer_name"/>
                </tree>
            </field>
        </record>        

        
        <record id="view_new_fg_packing_line_tree" model="ir.ui.view">
            <field name="name">fg.packing.line.tree</field>
            <field name="model">fg.packing.line</field>
            <field name="arch" type="xml" >
                <tree string="FG Packing Line" create="true">
                     <!-- delete ="false" editable="top" class="custom_column" -->
                    <field name="fg_carton" invisible="1"/>
                    <field name="oa_id"/>
                    <field name="product_id" force_save="1"/>
                    <field name="product_template_id"/>
                    <field name="action_date"/>
                    <field name="shade"/>
                    <field name="shade_ref" readonly="1" force_save="1"/>
                    <field name="finish"/>
                    <field name="slidercodesfg" required="True" optional="show" sum="Quantity" decoration-bf="True"/>
                    <field name="top"/>
                    <field name="bottom" force_save="1"/>
                    <field name="pinbox"/>
                    <field name="sizcommon"/>
                    <field name="qty"/>
    
                </tree>
            </field>
        </record>
        
        <record id="action_new_fg_packing" model="ir.actions.act_window">
            <field name="name">FG Packing List</field>
            <field name="res_model">fg.packing</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <record id="action_fg_packing_form" model="ir.actions.act_window">
            <field name="name">FG Packing New</field>
            <field name="res_model">fg.packing</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="taps_manufacturing.view_form_new_fg_packing"/>
            <field name="target">main</field>
        </record>         -->
    
        <menuitem id="menu_new_fg_packing"
            name="FG Packing New" 
            action="action_new_fg_packing" 
            parent="mrp.menu_mrp_root"
            sequence="6"/>

    </data>
</odoo>
