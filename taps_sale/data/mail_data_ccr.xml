<?xml version="1.0" encoding="utf-8"?>
<odoo><data noupdate="0">

    <record id="ccr_assign_quality_email_template" model="mail.template">
        <field name="name">CCR: ASSIGNING TO QUALITY DEPARTMENT</field>
        <field name="model_id" ref="taps_sale.model_sale_ccr"/>
        <field name="subject">${object.name}</field>
        <field name="email_from"></field>
        <field name="email_to"></field>
        <field name="partner_to"></field>
        <field name="body_html" type="xml">
<div>
    Dear Quality Team,<br /><br />
    
    You have been assigned to ${object.name}.<br />
    Kindly take necessary steps and proceed further.<br /><br/>
    Please, Click on "View CCR" for details information.<br /><br/>


    <div>
        <a style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;" href="/web#cids=${object.company_id.id}&amp;id=${object.id}&amp;view_type=form&amp;model=sale.ccr">View CCR</a><br/><br/>
    </div><br /><br/>

    

    Thank you,<br/><br/>

    <p>This email has been generated automatically.</p>
  
</div>
</field>
</record>

