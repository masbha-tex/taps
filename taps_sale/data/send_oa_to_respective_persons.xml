<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<template id="email_template_for_confirm_oa">
		<body>
		<html>
			<style>
		     /* Basic reset styles */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
       
		    @media screen and (max-width: 600px) {
            table {
                display: block;
            }
            th, td {
                display: block;
                width: 100%;
            }
        }
		  </style>
			<div class="page">
			  <div class="container">
				  <p style="padding:0px;font-size: 12px;">
        Dear MR.<strong style="color:blue"><t t-esc="record.sale_representative.name"/></strong>,
        <br/>
        
        Your order <strong style="font-size:14px;color:blue"><t t-esc="record.name"/></strong> from  <strong style="font-size:14px;color:blue"><t t-esc="record.partner_id.name"/></strong> amounting in <strong style="font-size:14px;color:blue"><t t-esc="record.currency_id.symbol"/><t t-esc="record.amount_total"/></strong>
        <t t-if="record.state == 'sale' and record.is_revised == False">
        
            has been released to production.
            <br/>
        </t>
        <t t-if="record.state == 'sale' and record.is_revised == True">
        
            has been revised and released to production.
            <br/>
        </t>
        Thank you for your trust!
        <br/>
        Do not hesitate to contact us if you have any questions.
       </p><br/>
       <div style="margin:0px;padding: 0px; font-size: 12px;">
										<table class="table table-sm p-0 m-0" width="100%" style="color:red;font-size: 12px; border-collapse: collapse;">
											<tbody>
												<tr style="color:white;background-color:rgb(113, 75, 98);">
													<td style="border:1px solid white" width="15%">
														<strong>Products</strong>
													</td>
													<td style="border:1px solid white" width="7%" align="center">
														<strong>PI Number</strong>
													</td>
													<td style="border:1px solid white" width="7%" align="center">
														<strong>Finish</strong>
													</td>
													<td style="border:1px solid white" width="7%" align="center">
														<strong>Slider</strong>
													</td>
													<td style="border:1px solid white" width="7%" align="center">
														<strong>Avg_Size</strong>
													</td>
													<td style="border:1px solid white" width="7%" align="center">
														<strong>Avg_Price</strong>
													</td>
													<td style="border:1px solid white" width="10%" align="center">
														<strong>OA Quantity</strong>
													</td>
													<td style="border:1px solid white" width="10%" align="right">
														<strong>OA Value</strong>
													</td>
												</tr>
											</tbody>
										</table>
										<table class="table table-sm p-0 m-0" width="100%" style="color:#454748;font-size: 12px; border-collapse: collapse;">
											<tbody>
												<tr style="border:1px solid black">
													<td width="15%" style="border:1px solid black">
														<strong><t t-esc="record.order_line[0].product_template_id.name"/></strong>
													</td>
													<td width="7%" align="center" style="border:1px solid black">
														<strong><t t-esc="record.order_ref.pi_number"/></strong>
													</td>
													<td width="7%" align="center" style="border:1px solid black">
														<strong><t t-esc="record.order_line[0].finish.splitlines()[0]"/></strong>
													</td>
													<td width="7%" align="center" style="border:1px solid black">
														<strong>TZP-<t t-esc="record.order_line[0].slidercodesfg.split('TZP-')[1]"/></strong>
													</td>
													<td width="7%" align="right" style="border:1px solid black">
														<strong><t t-esc="record.avg_size" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></strong>
													</td>
													<td width="7%" align="right" style="border:1px solid black">
														<strong><t t-esc="record.avg_price" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></strong>
													</td>
													<td width="10%" align="right" style="border:1px solid black">
														<strong><t t-esc="record.total_product_qty" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></strong>
													</td>
													<td width="10%" align="right" style="border:1px solid black">
														<strong><t t-esc="record.amount_total" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></strong>
													</td>
												</tr>
											</tbody>
										</table>
									</div>
        </div>      
			</div>
		</html>
	</body>
	</template>
</odoo>
