<odoo>
    <data>
        <record id="view_naf_template_form" model="ir.ui.view">
            <field name="name">naf.template.form</field>
            <field name="model">naf.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="NAF">
                    <header>
                        <button name="action_submit_approval" type="object" string="Submit" attrs= "{'invisible': [('state', 'not in', ['draft'])]}" help="Click On Submit to send for approval "/>
                        <button name="action_approve" type="object" string="Approve" attrs= "{'invisible': [('state', 'not in', ['to approve'])]}" help="Click On Approve to create a record"/>
                        <button name="action_set_draft" type="object" string="Set to Draft" attrs= "{'invisible': [('state', 'not in', ['cancel'])]}"/>
                        <button name="action_cancel" type="object" string="Cancel" attrs= "{'invisible': [('state', 'not in', ['approved'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,inter,to approve,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="type" widget="radio" class="oe_inline" nolabel="1" options="{'horizontal': true}"/>
                            </group>
                        </group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                            <!-- <button name="open_similar_customers_popup" type="object" string="Check Similar" context="{'type': 'type'}"/> -->
                        </div>
                        <group>
                            <group>
                                <field name="customer_group" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': [['type', '!=', 'customer']], 'required': [['state', '=', 'inter'],['type', '=', 'customer']]}"/>
                                <field name="buyer_group" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': [['type', '!=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '=', 'buyer']]}"/>
                                <field name="buying_house" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': [['type', '!=', 'customer']]}"/>
                                <field name="related_customer" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': [['type', '=', 'customer']], 'required': [['state', '=', 'inter'],['type', '!=', 'customer']]}" widget="many2many_tags"/>
                                
                                
                            </group>
                            <group>
                                <field name="buyer" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': [['type', '!=', 'customer']],'required': [['state', '=', 'inter'],['type', '=', 'customer']]}" widget="many2many_tags"/>
                                <field name="sourcing_office" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': [['type', '!=', 'buyer']]}" widget="many2many_tags"/>
                            </group>
                                
                        </group>
                        
                        <group>
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                <b>Company Address</b></span>
                                <div class="o_address_format">
                                
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            </group>
                            <group>
                                <field name="contact_person"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}"/>
                                <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                        </group>
                        </group>
                        <group>
                            <group>
                                <field name="swift_code" attrs="{'invisible':[['type', '=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '!=', 'buyer']]}"/>
                                <field name="bond_license" attrs="{'invisible':[['type', '=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '!=', 'buyer']]}"/>
                                <field name="custom_delivery_method" attrs="{'invisible':[['type', '=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '!=', 'buyer']]}"/>
                                <!-- <field name="property_product_pricelist" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/> -->
                                
                            </group>
                            <group>
                                <field name="property_payment_term_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible':[['type', '=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '!=', 'buyer']]}"/>
                                <field name="incoterms" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible':[['type', '=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '!=', 'buyer']]}"/>
                                
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="delivery_address" attrs="{'invisible':[['type', '=', 'buyer']], 'required': [['state', '=', 'inter'],['type', '!=', 'buyer']]}"/>
                            </group>
                            <group>
                                <field name="billing_address" attrs="{'required': [['state', '=', 'inter']]}"/>
                            </group>
                        </group>
                        <notebook attrs="{'invisible': ['|',['type', '=', 'buyinghouse'],['state', '=', 'draft']]}">
                            <page string="Assign Salesperson or Marketing person" name="allocated_line">
                                <field name="assign_line" widget="section_and_note_one2many" mode="tree">
                                <tree
                                    string="Assign Line"
                                    editable="bottom">
                                        <control>
                                        <create name="add_product_control" string="Add a Line" />
                                    </control>
                                        
                                        <field name="type_naf" invisible="1"/>
                                        <field name="buyer" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [['type_naf', '=', 'buyer']], 'required': [['type_naf', '=', 'customer']]}"/>
                                        
                                        <field name="salesperson"  options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"  attrs="{'invisible': [['type_naf', '=', 'buyer']], 'required': [['type_naf', '=', 'customer']]}"/>
                                        <field name="marketing_person"  options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [['type_naf', '!=', 'buyer']], 'required': [['type_naf', '=', 'buyer']]}"/>
                                        
                                        
                                        <field name="name" invisible="1"/>
                                       
                                    
                                    </tree>
                                </field>
                             </page>
                            
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_naf_template_tree" model="ir.ui.view">
            <field name="name">naf.template.tree</field>
            <field name="model">naf.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="NAF List">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="approved_by" widget="many2one_avatar_user"/>
                </tree>
            </field>
        </record>
        <record id="naf_assign_user_line_tree" model="ir.ui.view">
            <field name="name">naf.assign.user.line.tree</field>
            <field name="model">assign.user.line</field>
            <field name="arch" type="xml">
                <tree string="Assign Line Tree" create="false">
                   
                    
                    
                    <field name="buyer" />
                    
                    <field name="salesperson" />
                    <field name="marketing_person" />
                    <field name="type_naf"/>
                    <field name="name" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="action_naf_template" model="ir.actions.act_window">
            <field name="name">NAF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">naf.template</field>
            <field name="view_mode">tree,kanban,form</field>
            <!-- <field name="search_view_id" ref="sale_order_view_search_inherit_sale"/> -->
            <field name="context">{}</field>
            <!-- <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Buyer Or Customer to get Approval!
                </p>
            </field>
        </record>

        <menuitem 
            id="naf_template_view_menu"
            name="NAF"
            parent="sale.sale_menu_root"
            action="action_naf_template"
            sequence="2"
            groups = "sales_team.group_sale_manager"/>
        
    </data>
</odoo>