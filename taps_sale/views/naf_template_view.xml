<odoo>
    <data>
        <record id="view_naf_template_form" model="ir.ui.view">
            <field name="name">naf.template.form</field>
            <field name="model">naf.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="NAF">
                    <header>
                        <button name="action_submit_approval" type="object" string="Submit" attrs= "{'invisible': [('state', 'not in', ['draft'])]}" help="Click On Submit to send for approval "/>
                        <button name="action_approve" type="object" string="Approve" attrs= "{'invisible': [('state', 'not in', ['to approve'])]}" help="Click On Approve to create a record"/>
                        <button name="action_set_draft" type="object" string="Set to Draft" attrs= "{'invisible': [('state', 'not in', ['cancel'])]}"/>
                        <button name="action_cancel" type="object" string="Cancel" attrs= "{'invisible': [('state', 'not in', ['approved'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to approve,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="type" widget="radio" class="oe_inline" nolabel="1" options="{'horizontal': true}"/>
                            </group>
                        </group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="brand" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible':[('type', '=', 'customer')]}"/>
                                <field name="group" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible':[('type', '=', 'buyer')]}"/>
                                <span class="o_form_label o_td_label" name="address_name">
                                <b>
                                    <label for="salesperson" string="Salesperson" attrs="{'invisible':[('type', '=', 'buyer')]}"/>
                                    <label for="salesperson" string="Marketingperson" attrs="{'invisible':[('type', '=', 'customer')]}"/>
                                </b>
                                </span>
                               
                                <field name="salesperson" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" nolabel="1" widget="many2one_avatar_user"/>
                            </group>
                            <group>
                                <field name="sourcing_type" attrs="{'invisible':[('type', '=', 'customer')]}"/>
                                <field name="sourcing_office" attrs="{'invisible':[('type', '=', 'customer')]}"/>
                                <field name="related_buyer"  widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True}" attrs="{'invisible':[('type', '=', 'buyer')]}"/>
                                <field name="customer_type" attrs="{'invisible':[('type', '=', 'buyer')]}"/>
                                <field name="customer_status" attrs="{'invisible':[('type', '=', 'buyer')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                <b>Company Address</b></span>
                                <div class="o_address_format">
                                
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            </group>
                            <group>
                                <field name="contact_person"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}"/>
                                <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                        </group>
                        </group>
                        <group attrs="{'invisible':[('type', '=', 'buyer')]}" >
                            <group>
                                <field name="swift_code"/>
                                <field name="bond_license"/>
                                <field name="property_product_pricelist" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                                
                            </group>
                            <group>
                                <field name="property_payment_term_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                                <field name="incoterms" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                                <!-- <field name="property_delivery_carrier_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/> -->
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="delivery_address"/>
                            </group>
                            <group>
                                <field name="billing_address"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_naf_template_tree" model="ir.ui.view">
            <field name="name">naf.template.tree</field>
            <field name="model">naf.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="NAF List">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="approved_by" widget="many2one_avatar_user"/>
                </tree>
            </field>
        </record>
        <record id="action_naf_template" model="ir.actions.act_window">
            <field name="name">NAF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">naf.template</field>
            <field name="view_mode">tree,kanban,form</field>
            <!-- <field name="search_view_id" ref="sale_order_view_search_inherit_sale"/> -->
            <field name="context">{}</field>
            <!-- <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Buyer Or Customer to get Approval!
                </p>
            </field>
        </record>

        <menuitem 
            id="naf_template_view_menu"
            name="NAF"
            parent="sale.sale_menu_root"
            action="action_naf_template"
            sequence="2"/>
        
    </data>
</odoo>