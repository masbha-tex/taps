<odoo>
    <data>
        <record id="view_provisional_template_form" model="ir.ui.view">
            <field name="name">provisional.template.form</field>
            <field name="model">provisional.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="provisional NAF" >
                    <header>
                        <button name="action_approval"  type="object" string="Send For Approval" attrs= "{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_teamleader"  type="object" string="Team Leader Approval" attrs= "{'invisible': [('state', '!=', 'pnaf')]}"/>
                        <button name="action_pre_approve"  type="object" string="Pre Approval" attrs= "{'invisible': [('state', '!=', 'inter')]}"/>
                        <button name="action_hod" type="object" string="HOD Sales" attrs= "{'invisible': [('state', '!=', 'hod')]}" help="Click On HOD Sales"/>
                        <button name="action_approve" type="object" string="Approve" attrs= "{'invisible': [('state', 'not in', ['to approve'])]}" help="Click On Approve to create a record"/>
                        
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,inter,pnaf,hod,to approve,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <h3><field name="code"  readonly="1"/></h3><br/>
                                <field name="type" widget="radio" class="oe_inline" nolabel="1" options="{'horizontal': true}" attrs="{'readonly': [('state', 'not in', ('draft', 'inter'))]}"/>
                            </group>
                        </group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            </h1>
                            <!-- <button name="open_similar_customers_popup" type="object" string="Check Similar" context="{'type': 'type'}"/> -->
                        </div>
                        <group>
                            <group>
                                <field name="customer_group" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|','|',['type', '=', 'buyinghouse'],['type', '=', 'buyer'],['state', '=', 'draft'],['state', '=', 'inter']], 'required': [['state', '=', 'pnaf'],['type', '=', 'customer']], 'readonly': [('state', '=', 'approved')]}"/>
                                <field name="buyer_group" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|',['type', '!=', 'buyer'],['state', '=', 'draft'],['state', '=', 'inter']], 'required': [['type', '=', 'buyer'],['state', '=', 'pnaf']], 'readonly': [('state', '=', 'approved')]}"/>
                                <field name="buying_house" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|','|',['type', '=', 'buyinghouse'],['type', '=', 'buyer'],['state', '=', 'draft'],['state', '=', 'inter']], 'readonly': [('state', '=', 'approved')]}"/>
                                <field name="related_customer" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|',['type', '=', 'customer'],['state', '=', 'draft'],['state', '=', 'inter']], 'required': ['&amp;',['state', '=', 'pnaf'],'|',['type', '=', 'buyinghouse'], ['type', '=', 'buyer']], 'readonly': [('state', '=', 'approved')]}" widget="many2many_tags"/>
                                
                                
                            </group>
                            <group>
                                <field name="buyer" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|','|',['type', '=', 'buyinghouse'],['type', '=', 'buyer'],['state', '=', 'draft'],['state', '=', 'inter']],'required': [['state', '=', 'pnaf'],['type', '=', 'customer']], 'readonly': [('state', '=', 'approved')]}" widget="many2many_tags"/>
                                <field name="sourcing_office" widget="many2many_tags" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|',['type', '!=', 'buyer'],['state', '=', 'draft'],['state', '=', 'inter']], 'required': [['type', '=', 'buyer'],['state', '=', 'pnaf']], 'readonly': [('state', '=', 'approved')]}"/>
                            </group>
                                
                        </group>
                        
                        <group>
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                <b>Company Address</b></span>
                                <div class="o_address_format">
                                
                                    <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                    <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" attrs="{'readonly': [('state', '=', 'approved')]}" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            </group>
                            <group>
                                <field name="contact_person" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                <field name="phone" widget="phone" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                <field name="mobile" widget="phone" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                                <field name="website" widget="url" placeholder="e.g. https://www.odoo.com" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                        </group>
                        <group>
                            <group>
                                <field name="swift_code" attrs="{'invisible': ['|','|',['state', '=', 'draft'],['state', '=', 'inter'],['type', '=', 'buyer']], 'required': ['&amp;',['state', '=', 'pnaf'], '|', ['type', '=', 'customer'],['type', '=', 'buyinghouse']], 'readonly': [('state', '=', 'approved')]}"/>
                                <field name="bond_license" attrs="{'invisible': ['|','|',['state', '=', 'draft'],['state', '=', 'inter'],['type', '=', 'buyer']], 'required': ['&amp;',['state', '=', 'pnaf'], '|', ['type', '=', 'customer'],['type', '=', 'buyinghouse']], 'readonly': [('state', '=', 'approved')]}"/>
                                <field name="custom_delivery_method" attrs="{'invisible': ['|','|',['state', '=', 'draft'],['state', '=', 'inter'],['type', '!=', 'customer']], 'required': [['state', '=', 'pnaf'],['type', '=', 'customer']], 'readonly': [('state', '=', 'approved')]}"/>
                                <!-- <field name="property_product_pricelist" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/> -->
                                
                            </group>
                            <group>
                                <field name="property_payment_term_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|',['state', '=', 'draft'],['state', '=', 'inter'],['type', '=', 'buyer']],'required': ['&amp;',['state', '=', 'pnaf'], '|', ['type', '=', 'customer'],['type', '=', 'buyinghouse']], 'readonly': [('state', '=', 'approved')]}"/>
                                <field name="incoterms" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}" attrs="{'invisible': ['|','|',['state', '=', 'draft'],['state', '=', 'inter'],['type', '=', 'buyer']], 'required': ['&amp;',['state', '=', 'pnaf'], '|', ['type', '=', 'customer'],['type', '=', 'buyinghouse']], 'readonly': [('state', '=', 'approved')]}"/>
                                
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="delivery_address" attrs="{'invisible': ['|','|',['state', '=', 'draft'],['state', '=', 'inter'],['type', '=', 'buyer']], 'required': [['type', '!=', 'buyer'],['state', '=', 'pnaf']], 'readonly': [('state', '=', 'approved')]}"/>
                            </group>
                            <group>
                                <field name="billing_address" attrs="{'invisible': ['|',['state', '=', 'draft'],['state', '=', 'inter']], 'required': [['state', '=','pnaf']], 'readonly': [('state', '=', 'approved')]}"/>
                            </group>
                        </group>
                        <notebook attrs="{'invisible': ['|','|',('type', '=', 'buyinghouse'),('state','=','inter'),('state','=','draft')]}">
                            <page string="Assign Salesperson" name="allocated_line" >
                                <field name="assign_line" widget="section_and_note_one2many" mode="tree" attrs="{'required': [['type', '!=', 'buyinghouse'],['state', '=', 'pnaf']]}">
                                <tree 
                                    string="Assign Line"
                                    editable="bottom">
                                        <control>
                                        <create name="add_product_control" string="Add a Line" />
                                    </control>
                                        
                                        <field name="type_pnaf" invisible="1"/>
                                        <field name="buyer" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [['type_pnaf', '=', 'buyer']], 'required': [['type_pnaf', '=', 'customer']]}"/>
                                        
                                        <field name="salesperson"  options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" force_save="1" attrs="{'invisible': [['type_pnaf', '=', 'buyer']], 'required': [['type_pnaf', '=', 'customer']]}"/>
                                        <field name="marketing_person"  options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [['type_pnaf', '!=', 'buyer']], 'required': [['type_pnaf', '=', 'buyer']]}"/>
                                        
                                        
                                        <field name="name" invisible="1"/>
                                       
                                    
                                    </tree>
                                </field>
                             </page>
                            
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_provisional_template_kanban">
            <field name="name">provisional.template.kanban</field>
            <field name="model">provisional.template</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="state"/>
                    <field name="create_uid"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                
                                <!-- <field name="image_field" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/> -->
                                <div class="oe_kanban_details">
                                    <div>
                                        <span><field name="code"/></span>
                                    </div>
                                   <div class="o_kanban_record_top">
                                       <div class="o_kanban_record_headings">
                                           <strong class="o_kanban_record_title">
                                                <h3><field name="name"/></h3>
                                            </strong>
                                        </div>
                                    </div>
                                    
                                    <div>
                                        
                                       <span>Type: </span><strong><field name="type"/></strong>
                                        <!-- <field name="create_uid"/> -->
                                        
                                    </div>
                                    
                                    <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        
                                        <field name="create_uid"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default',  'done': 'success'}}"/>
                                    </div>
                                </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_provisional_template_tree" model="ir.ui.view">
            <field name="name">provisional.template.tree</field>
            <field name="model">provisional.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="provisional NAF List">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="state"/>
                    <!-- <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="approved_by" widget="many2one_avatar_user"/> -->
                </tree>
            </field>
        </record>
        <record id="assign_user_line_tree" model="ir.ui.view">
            <field name="name">assign.user.line.tree</field>
            <field name="model">assign.user</field>
            <field name="arch" type="xml">
                <tree string="Assign Line Tree" create="false">
                   
                    
                    <field name="type_pnaf"/>
                    <field name="buyer" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [['type_pnaf', '=', 'buyer']], 'required': [['type_pnaf', '=', 'customer']]}"/>
                    
                    <field name="salesperson" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" force_save="1" attrs="{'invisible': [['type_pnaf', '=', 'buyer']], 'required': [['type_pnaf', '=', 'customer']]}"/>
                    <field name="marketing_person"  options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [['type_pnaf', '!=', 'buyer']], 'required': [['type_pnaf', '=', 'buyer']]}"/>
                    <field name="name" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="action_provisional_template" model="ir.actions.act_window">
            <field name="name">Provisional NAF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">provisional.template</field>
            <field name="view_mode">tree,kanban,form</field>
            <!-- <field name="search_view_id" ref="sale_order_view_search_inherit_sale"/> -->
            <field name="context">{}</field>
            <!-- <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    
                </p>
            </field>
        </record>

        <menuitem 
            id="provisional_template_view_menu"
            name="Provisional NAF"
            parent="sale.sale_menu_root"
            action="action_provisional_template"
            sequence="3"
            groups = "sales_team.group_sale_manager"/>
        
    </data>
</odoo>