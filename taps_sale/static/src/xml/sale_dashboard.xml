<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- This template is for a table at the top of purchase views that shows some KPIs. -->
    <t t-name="sale.SaleDashboard">
        <div class="o_sale_dashboard container">
            <div class="row">
            <div class="col-sm-5">
            <table class="table table-sm">
                <!-- thead needed to avoid list view rendering error for some reason -->
                <thead>
                    <tr>
                    <!-- can't use th tag due to list rendering error when no values in list... -->
                        <td class="o_text">
                            <div>Types</div>
                        </td>
                        <td style="background-color:#255D83" class="o_main o_dashboard_action" title="Sample PI" name="taps_sale.sale_action_dashboard" context='{"search_default_draft": true}'>
                            <a href="#"><t t-esc="values['samplepi']"/><br/>Sample PI</a>
                        </td>
                        <td style="background-color:#774373"  class="o_main o_dashboard_action" title="Block" name="taps_sale.sale_action_dashboard" context='{"search_default_submitted": true}'>
                            <a href="#"><t t-esc="values['block']"/><br/>Block</a>
                        </td>
                        <td style="background-color:#422466"  class="o_main o_dashboard_action" title="Replacement" name="taps_sale.sale_action_dashboard" context='{"search_default_checked": true}'>
                            <a href="#"><t t-esc="values['replacement']"/><br/>Replacement</a>
                        </td>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="o_text">
                            <div>Sales Type</div>
                        </td>
                        <td class="o_main o_dashboard_action" title="Sample" name="taps_sale.sale_action_dashboard" context='{"search_default_draft_rfqs": true}'>
                            <a href="#"><t t-esc="values['sa']"/><br/>SA</a>
                        </td>
                        <td class="o_main o_dashboard_action" title="Pi" name="taps_sale.sale_action_dashboard" context='{"search_default_waiting_rfqs": true}'>
                            <a href="#"><t t-esc="values['pi']"/><br/>PI</a>
                        </td>
                        <td class="o_main o_dashboard_action" title="Oa" name="taps_sale.sale_action_dashboard" context='{"search_default_late_rfqs": true}'>
                            <a href="#"><t t-esc="values['oa']"/><br/>OA</a>
                        </td>
                    </tr>
                </tbody>
            </table></div>

            <div class="col-sm-7">
            <table class="table table-sm">
                <!-- thead needed to avoid list view rendering error for some reason -->
                <thead>
                    <tr>
                        <!-- can't use th tag due to list rendering error when no values in list... -->
                        <td class="o_text">Total Order Quantity (<t t-if="values['company'] == 1">Pcs</t><t t-if="values['company'] == 3">Gross</t>)</td>
                        <td class="o_main o_dashboard_action"><a href="#"><span><t t-esc="values['pi_total']"/> </span></a></td>
                        <td class="o_text">Total Order Value (<t t-esc="$"/>)</td>
                        <td class="o_main o_dashboard_action" name="taps_sale.sale_action_dashboard" context='{"search_default_to_post": true, "search_default_approved": true, "search_default_ex_date_approve": true}'><a href="#"><span><t t-esc="values['pi_total_value']"/> M</span></a></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="o_text">Total Released Quantity (<t t-if="values['company'] == 1">Pcs</t><t t-if="values['company'] == 3">Gross</t>)</td>
                        <td class="o_main o_dashboard_action" style="background-color:#E54F6D"><a href="#"><span><t t-esc="values['oa_total']"/></span></a></td>
                        <td class="o_text">Total Released Value (<t t-esc="values['company_currency_symbol']"/>)</td>
                        <td class="o_main o_dashboard_action"  name="taps_sale.sale_action_dashboard"><a href="#"><span><t t-esc="values['oa_total_value']"/> M</span></a></td>
                    </tr>
                </tbody>
            </table></div>
        </div>
        </div>
    </t>
</templates>
