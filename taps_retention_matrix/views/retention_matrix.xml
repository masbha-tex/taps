<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="view_retention_matrix_form" model="ir.ui.view">
        <field name="name">retention.matrix.view.from</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <form string="Retention Matrix">
                 <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create':true, 'no_open':true}"/>
                            <field name="job_id"/>
                            <field name="grade"/>
                        </group>
                        <group>
                            <field name="year" widget="selection"/>
                            <field name="quarter"/>
                            <field name="impact"/>
                            <field name="risk"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
      <record model="ir.ui.view" id="view_retention_matrix_tree">
        <field name="name">retention.matrix.tree</field>
        <field name="model">retention.matrix</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Retention" multi_edit="1" sample="1" js_class="taps_retention_matrix_tree_dashboard_upload">         
                <field name="employee_id" required="1"/>
                <field name="company_id"/>
                <!-- <field name="grade"/> -->
                <field name="joining_date"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="coach_id"/>
                <field name="service"/>
                <field name="year" widget="selection"/>
                <field name="quarter"/>
                <field name="impact"/>
                <field name="risk"/>
            </tree>
             
        </field>
    </record>

    <record model="ir.ui.view" id="view_retention_kanban">
        <field name="name">retention.matrix.kanban</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <kanban>
               <field name="employee_id"/>
                <field name="impact"/>
                <field name="risk"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill o_kanban_card_appraisal">
                            <field name="image_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.deletable"><a type="delete" class="dropdown-item" role="menuitem">Delete</a></t>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                               <div class="o_kanban_record_top">
                                   <div class="o_kanban_record_headings">
                                       <strong class="o_kanban_record_title">
                                            <field name="employee_id"/>
                                        </strong>
                                    </div>
                                </div>
                                <field name="department_id"/>
                                <div>
                                    <table class="table table-sm p-0 m-0 left bg-dark" style="font-size:7.5pt; width:100%; table-layout:fixed;color: white">
                                        <thead>
                                            <tr align="left" >
                                                <th style="background-color:#714B67; color: white; text-align: center">Quarter</th>
                                                <th style="background-color:grey;color:white; text-align: center">Q1</th>
                                                <th style="background-color:grey;color:white; text-align: center">Q2</th>
                                                <th style="background-color:grey;color:white; text-align: center">Q3</th>
                                                <th style="background-color:grey;color:white; text-align: center">Q4</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="p-0 m-0" align="left">
                                                <td style="background-color:#714B67;color:white; text-align: center; font-weight: bold">Impact
                                                    <!-- <field name="ytd_weightage_acvd"/> -->
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="impact"/> -->
                                                    <t t-esc="record.impact.q1"/>
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_2_ytd"/> -->
                                                    <t t-esc="record.impact.q2"/>
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_3_ytd"/> --><t t-esc="record.impact.q3"/>
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_4_ytd"/> -->
                                                </td>
                                                
                                            </tr>
                                            <tr class="p-0 m-0" align="left">
                                                <td style="background-color:#714B67;color:white; text-align: center; font-weight: bold">Risk
                                                    <!-- <field name="ytd_weightage_acvd"/> -->
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_1_ytd"/> -->
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_2_ytd"/> -->
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_3_ytd"/> -->
                                                </td>
                                                <td style="background-color:grey;color:white; text-align: center">
                                                    <!-- <field name="q_4_ytd"/> -->
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>                                
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left"/>
                                <div class="oe_kanban_bottom_right mt-auto d-flex justify-content-between align-items-end">
                                    <!-- <t t-foreach="record.employee_id.parent_id.raw_value" t-as="employee">
                                        <img class="oe_kanban_avatar o_appraisal_manager" t-att-src="kanban_image('hr.employee', 'image_128', employee)" t-att-title="employee.value" t-att-alt="employee.value" t-att-data-id="employee"/>
                                    </t> -->
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_retention_matrix_gantt" model="ir.ui.view">
        <field name="name">retention.matrix.gantt</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <gantt date_start="date_from"
               date_stop="date_to">
                <field name="employee_id"/>
                <field name="impact"/>
                <field name="risk"/>
                <templates>
                     <div t-name="gantt-popover" class="container-fluid">
                         <div class="row no-gutters">
                              <div class="container" align="center">
                                  <ul class="pl-1 mb-0">
                                    <li><field name="employee_id"/></li>
                                    <li><field name="impact"/></li>
                                    <li><field name="risk"/></li>
                                  </ul>
                              </div>
                         </div>
                    </div>
                </templates>
            </gantt>
                
        </field>
    </record>
      

      <record id="view_retention_matrix_dashboard" model="ir.ui.view">
        <field name="name">retention.matrix.dashboard</field>
        <field name="model">retention.matrix</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <dashboard sample="1">
                <view type="graph" ref="taps_retention_matrix.view_retention_matrix_graph"/>
                <group>
                    <group col="3">
                        <aggregate name="employee_id" string="Employee" field="employee_id"/>
                        <!-- <aggregate name="employee_id" string="Total Employee" field="employee_id"/> -->
                        <aggregate name="quarter" string="Quarter" field="quarter" group_operator="count" measure="__count__"/> 
                        <!-- <aggregate name="impact" string="Total Impact" field="impact" group_operator="count"/> -->
                        <!-- <aggregate name="risk" string="Total Risk" field="risk" group_operator="count"/> -->
                    </group>

                    <group col="1">
                        <widget name="pie_chart" title="Quarter" attrs="{'groupby': 'quarter'}"/>
                        <widget name="pie_chart" title="Risk" attrs="{'groupby': 'risk'}"/>
                        <widget name="pie_chart" title="Impact" attrs="{'groupby': 'impact'}"/>
                    </group>

                </group>
                <view type="pivot" ref="taps_retention_matrix.view_retention_matrix_pivot"/>
                
            </dashboard>
        </field>
    </record>

    <record id="view_retention_matrix_pivot" model="ir.ui.view">
        <field name="name">retention.matrix.pivot</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <pivot string="Retention Pivot Analysis" disable_linking="True" sample="1">
                <field name="quarter" type="row"/>
                <!-- <field name="employee_id" type="measure"/> -->
                <field name="impact" type="count"/>
                <field name="risk" type="count"/>
                <!-- <field name="start_date" type="measure"/> -->
                <!-- <field name="instructor_id" type="measure"/> -->
                <!-- <field name="attendee_ids" type="measure"/> -->
                <!-- <field name="attendance_ids" type="measure"/> -->
            </pivot>
        </field>
    </record> 
    <record model="ir.ui.view" id="view_retention_matrix_graph">
        <field name="name">retention.matrix.graph</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <graph string="Retention Graph Analysis" stacked="False" type="bar" sample="1">
                
                <field name="quarter" type="row"/>
                <field name="impact" type="count"/>
                <field name="risk" type="count"/>
            </graph>
        </field>
    </record>


      <record model="ir.ui.view" id="retention_search_view">
        <field name="name">retention.matrix.search</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <search>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="impact"/>
                <field name="risk"/>

                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1" class="o_search_panel_field" context="{'default_company_id': company_id}"/>
                    <field name="department_id" icon="fa-users" enable_counters="1" class="o_search_panel_field"/>
                </searchpanel>                
            </search>
        </field>
    </record>

          
      <record model="ir.actions.act_window" id="retention_list_action">
        <field name="name">Retention</field>
        <field name="res_model">retention.matrix</field>
        <field name="context" eval="{'search_default_my_retention': 1}"/>
        <field name="view_mode">tree,kanban,form,dashboard,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first Retention Heat Map
            </p>
        </field>
    </record>


    <menuitem 
        id="main_retention_menu" 
        name="Retention Matrix"
        action="retention_list_action"
        groups="taps_retention_matrix.group_user_retention"
        web_icon="taps_retention_matrix,static/description/icon.png"/>

    
  </data>
</odoo>