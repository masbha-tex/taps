    <record id="crm_visit_kanban_view" model="ir.ui.view">
            <field name="name">crm.visit.kanban</field>
            <field name="model">crm.visit</field>
            <!-- <field name="priority" eval="1"/> -->
            <field name="arch" type="xml">
                <kanban default_order="visit_date desc" default_group_by="team_id" class="o_kanban_small_column" on_create="quick_create" quick_create_view="taps_crm.quick_create_visit_form"
                    archivable="false" sample="1" js_class="taps_crm_visit_kanban_dashboard_upload">
                    <!-- <field name="stages" options='{"group_by_tooltip": {"requirements": "stages"}}'/> -->
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="buyer"/>
                    <field name="concern"/>
                    <field name="designation"/>
                    <field name="mobile"/>
                    <field name="product"/>
                    <field name="visit_purpose"/>
                    <field name="visit_outcome"/>
                    <field name="action"/>
                    <field name="user_id"/>
                    <field name="team_id" />
                    <field name="visit_date" />
                    <!-- <progressbar field="stages"/> -->
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
