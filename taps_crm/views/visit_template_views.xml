<odoo>
    <record id="crm_visit_template_view_form" model="ir.ui.view">
            <field name="name">crm.visit.purpose.form</field>
            <field name="model">crm.visit.purpose</field>
            <field name="arch" type="xml">
                <form string="Visit purpose">
                    <field name="name"/>
                </form>
            </field>
    </record>
    <record model="ir.actions.act_window" id="crm_visit_purpose_action">
            <field name="name">Customer Visit Purpose</field>
            <field name="res_model">crm.visit.purpose</field>
            <field name="view_mode">tree,kanban,form</field>
    </record>
            

    
    <record id="crm_visit_template_view_form" model="ir.ui.view">
            <field name="name">crm.visit.form</field>
            <field name="model">crm.visit</field>
            <field name="arch" type="xml">
                <form class="o_lead_opportunity_form">
                    <header>
                        <button name="action_done" string="Visited" type="object" attrs="{'invisible': [('stages', 'not in', ['draft'])]}"/>
                        <button name="action_set_draft" string="Set To Draft" type="object" attrs="{'invisible': [('stages', 'not in', ['cancel'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" ttrs="{'invisible': [('stages', 'in', ['cancel'])]}"/>
                        <field name="stages" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <br/>
                        <div class="text-center alert alert-primary oe_edit_only" role="alert">
                        <field name="description" placeholder="Description ..."/>
                        </div>
                        <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="buyer" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}" domain="[('buyer_rank','>', 0)]"/>
                            <field name="concern"/>
                            <field name="designation"/>
                            <field name="mobile"/>
                            <field name="visit_date"/>
                        </group>
                        <group>
                            <field name="product" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True, 'color_field': 'color'}"/>
                            <field name="visit_purpose" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="visit_outcome"/>
                            <field name="action"/>
                            
                        </group>
                        </group>
                        <group>
                            <group>
                                <field name="user_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="team_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    <record id="crm_visit_template_view_list" model="ir.ui.view">
            <field name="name">crm.visit.list</field>
            <field name="model">crm.visit</field>
            <field name="arch" type="xml">
                <tree class="o_lead_opportunity_form">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="visit_date"/>
                    <field name="partner_id"/>
                    <field name="buyer"/>
                    <field name="concern"/>
                    <field name="designation"/>
                    <field name="mobile"/>
                    <field name="product"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="visit_purpose"/>
                    <field name="visit_outcome"/>
                    <field name="action"/>
                    <field name="user_id"/>
                    <field name="team_id"/>
                    <field name="stages" decoration-success="stages == 'done'" decoration-info="stages == 'to draft'" decoration-warning="stages == 'cancel'" widget="badge" optional="show"/>
                    <field name="company_id" invisible="1"/>
                    
                </tree>
            </field>
        </record>
