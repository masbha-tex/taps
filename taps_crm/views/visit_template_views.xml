    <record id="crm_visit_kanban_view" model="ir.ui.view">
            <field name="name">crm.visit.kanban</field>
            <field name="model">crm.visit</field>
            <!-- <field name="priority" eval="1"/> -->
            <field name="arch" type="xml">
                <kanban default_group_by="stages" class="o_kanban_small_column" on_create="quick_create" quick_create_view="taps_crm.quick_create_visit_form"
                    archivable="false" sample="1">
                    <!-- <field name="stages" options='{"group_by_tooltip": {"requirements": "stages"}}'/> -->
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="buyer"/>
                    <field name="concern"/>
                    <field name="designation"/>
                    <field name="mobile"/>
                    <field name="product"/>
                    <field name="visit_purpose"/>
                    <field name="visit_outcome"/>
                    <field name="action"/>
                    <field name="user_id"/>
                    <field name="team_id" />
                    <!-- <progressbar field="stages"/> -->
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle"><field name="partner_id"/></span>
                                </div>
                                <div>
                                  <field name="product"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- <field name="priority" widget="priority"/> -->
                                        <div class="o_kanban_inline_block">
                                            <field name="action" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    <record id="crm_customer_visit_view_graph" model="ir.ui.view">
            <field name="name">crm.visit.graph.view</field>
            <field name="model">crm.visit</field>
            <field name="arch" type="xml">
                <graph string="Customer Visit" sample="1">
                    <field name="team_id" type="row"/>
                    <field name="visit_date" interval="month" type="row"/>
                    <field name="color" invisible="1"/>
                </graph>
            </field>
        </record>
    <record id="crm_customer_visit_action_dashboard_graph" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="taps_crm.crm_customer_visit_view_graph"/>
            <!-- <field name="act_window_id" ref="crm_enterprise.crm_opportunity_action_dashboard"/> -->
    </record>
    <record model="ir.actions.act_window" id="crm_visit_action">
            <field name="name">Customer Visit</field>
            <field name="res_model">crm.visit</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <!-- <field name="domain">['|', ('type','=','lead'), ('type','=',False)]</field> -->
            <!-- <field name="search_view_id" ref="crm.view_crm_case_leads_filter"/> -->
            <!-- <field name="context">{
                    'default_type':'lead',
                    'search_default_type': 'lead',
                    'search_default_to_process':1,
                } -->
            <!-- </field> -->
        </record>


    <menuitem
        id="crm_menu_visit"
        name="VISIT"
