<odoo>

    <record id="reallocation_template_list" model="ir.ui.view">
            <field name="name">reallocation.template.list</field>
            <field name="model">reallocation.template</field>
            <field name="arch" type="xml">
                <tree string="Reallocation Form">
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
    </record>
    <record id="reallocation_template_form" model="ir.ui.view">
            <field name="name">reallocation.template.form</field>
            <field name="model">reallocation.template</field>
            <field name="arch" type="xml">
                
                <form string="Reallocation Form View">
                    <header>
                        <button name="action_submit_approval" type="object" string="Submit" attrs= "{'invisible': [('state', 'not in', ['draft'])]}" help="Click On Submit to send for approval "/>
                        <button name="action_hod" type="object" string="Head Of Sales" attrs= "{'invisible': [('state', 'not in', ['submitted'])]}" help="Click On Approve to create a record"/>
                        <button name="action_approve" type="object" string="Approve" attrs= "{'invisible': [('state', 'not in', ['to approve'])]}" help="Click On Approve to create a record"/>
                        <button name="action_set_draft" type="object" string="Set to Draft" attrs= "{'invisible': [('state', 'not in', ['cancel'])]}"/>
                        <button name="action_cancel" type="object" string="Cancel" attrs= "{'invisible': [('state', 'not in', ['approved'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,to approve,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="type"/>
                                
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Reallocation Line" name="reallocation_line">
                                <field name="reallocation_line" widget="section_and_note_one2many" mode="tree">
                                    <tree
                                    string="Reallocation Line"
                                    editable="bottom">
                                        <control>
                                        <create name="add_product_control" string="Add a product"/>
                                        <!-- <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/> -->
                                    </control>
                                        <!-- <field name="domain" invisible="1"/> -->
                                        
                                        <field name="existing_user"/>
                                        <field name="new_user"/>
                                        <field name="customer_domain" invisible="1"/>
                                        <field name="select_customer" domain="customer_domain" widget="many2many_tags"/>
                                        <field name="name" invisible="1"/>
                                        <field name="is_removed"/>
                                    </tree>
                                </field>
                             </page>
                        </notebook>
                    
                    </sheet>
                    
                    
                </form>
            </field>
    </record>
    <record id="reallocation_line_tree" model="ir.ui.view">
            <field name="name">reallocation.template.line.tree</field>
            <field name="model">reallocation.template.line</field>
            <field name="arch" type="xml">
                <tree string="Reallocation Line Tree" create="false">
                    <!-- <field name="domain" invisible="1"/> -->
                    
                    
                    <field name="existing_user"/>
                    <field name="new_user"/>
                    <field name="customer_domain" invisible="1"/>
                    <field name="select_customer" domain="customer_domain" widget="many2many_tags"/>
                    
                    <field name="is_removed"/>
                </tree>
            </field>
        </record>
    <record model="ir.actions.act_window" id="reallocation_template_action">
            <field name="name">Re-Allocation Form</field>
            <field name="res_model">reallocation.template</field>
            <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="reallocation_menu"
        name="Reallocation"
        parent="crm.crm_menu_sales"
        action="taps_crm.reallocation_template_action"
        sequence="8"/>
</odoo>