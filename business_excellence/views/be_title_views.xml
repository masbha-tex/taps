<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_business_excellence_title_form" model="ir.ui.view">
            <field name="name">business.excellence.title.form</field>
            <field name="model">business.excellence.title</field>
            <field name="arch" type="xml">
                <form string="Business Excellence Scope">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Employee Induction"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="criteria_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" invisible="1"/>
                            </group>
                            <separator string="Content" colspan="2" />
                            <group colspan="2" col="2">
                                <field name="description" placeholder="Training content here..."/>
                            </group>                            
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_business_excellence_title_tree" model="ir.ui.view">
            <field name="name">business.excellence.title.tree</field>
            <field name="model">business.excellence.title</field>
            <field name="arch" type="xml">
                <tree string="Business Excellence Scope" sample="1">
                    <field name="name"/>
                    <field name="criteria_id"/>
                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="business_excellence_title_kanban" model="ir.ui.view">
            <field name="name">business.excellence.title.kanban</field>
            <field name="model">business.excellence.title</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <field name="criteria_id"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_business_excellence_title_filter" model="ir.ui.view">
            <field name="name">business.excellence.title.search</field>
            <field name="model">business.excellence.title</field>
            <field name="arch" type="xml">
                <search string="Titles">
                    <field name="name"/>
                    <field name="criteria_id" operator="child_of"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Criteria" name="criteria" domain="[]" context="{'group_by': 'criteria_id'}"/>
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_business_excellence_title" model="ir.actions.act_window">
            <field name="name">Business Excellence Scope</field>
            <field name="res_model">business.excellence.title</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_business_excellence_title_filter"/>
            <field name="context">{"search_default_Current":1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Ready to training more title?
              </p><p>
                Let's create a training title.
              </p>
            </field>
        </record>
        <menuitem
            id="menu_business_excellence_title_tree"
            name="Scope"
            action="action_business_excellence_title"
            parent="business_excellence.main_business_excellence_menu"
            groups="hr.group_hr_manager"
            sequence="3"/>

    </data>
</odoo>
